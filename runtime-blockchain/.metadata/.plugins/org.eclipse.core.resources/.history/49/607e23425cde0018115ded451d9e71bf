            if(Nuevo)
            {
                PerrosJovenes GET Placa = perro
            }
            else
            {
                PerrosViejos GET Placa = perro
            }*/
        }
        Operacion isUd=false ActualizarPerro(Numerico Edad, Numerico Precio)
        {
            /*Perro perro = Perros GET Placa
            perro.Edad = Edad
            perro.Precio = Precio
            perro.Nuevo = false*/
        }
        Operacion isUd=false BorrarPerro(String Placa)
        {
            Perros DELETE Placa
        }
    }
    TipoDato STRING String
	TipoDato NUMERICO Numerico
	TipoDato BOOLEAN Boolean
    TipoDato MapaPerros : Map <String,"Perrera.Perro">
}